<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".com.example.isd.videoss.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.example.isd.videoss.MainActivity" />

    </data>

    <LinearLayout style="@style/vlinearlayout">

        <!-- Date1 - Date2 -->
        <androidx.cardview.widget.CardView style="@style/cardView">

            <LinearLayout style="@style/hlinearlayout">

                <TextView
                    style="@style/i_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Date Differ" />

                <io.blackbox_vision.datetimepickeredittext.view.DatePickerEditText
                    android:id="@+id/date1"
                    style="@style/EditText"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="DD-MM-YYYY"
                    app:dateFormat="dd-MM-yyyy"
                    app:maxDate="CR_DATE" />

                <io.blackbox_vision.datetimepickeredittext.view.DatePickerEditText
                    android:id="@+id/date2"
                    style="@style/EditText"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="DD-MM-YYYY"
                    app:dateFormat="dd-MM-yyyy"
                    app:maxDate="CR_DATE" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--DateCheck-->
        <androidx.cardview.widget.CardView style="@style/cardView">

            <LinearLayout style="@style/hlinearlayout">

                <TextView
                    android:id="@+id/year"
                    style="@style/i_textview"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="years"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/month"
                    style="@style/i_textview"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="months"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/days"
                    style="@style/i_textview"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="days"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--DateCheck-->
        <androidx.cardview.widget.CardView style="@style/cardView">

            <LinearLayout style="@style/vlinearlayout">

                <Button
                    android:id="@+id/btnCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@android:color/holo_green_light"
                    android:onClick='@{() -> callback.BtnCheck()}'
                    android:text="Check"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/differ"
                    style="@style/i_textview"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Total"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
