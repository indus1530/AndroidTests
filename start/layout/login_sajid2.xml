<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tree"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_directions_bike_black_24dp"
                android:layout_marginTop="68dp"
                android:padding="4dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_ggle"
                android:text="Google"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/bkgrd_transparent_gplus"
                android:layout_marginTop="48dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_fb"
                android:text="Facebook"
                android:textAllCaps="false"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bkgd_transparent_fb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:weightSum="9">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_signup"
                    android:padding="18dp"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_weight="4"
                    android:clickable="true"
                    android:background="@drawable/bkgd_transparent1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_login"
                    android:layout_weight="4"
                    android:text="Log in"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:clickable="true"
                    android:background="@drawable/bkgd_transparent1"
                    android:padding="18dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Show More"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/textView_showM"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="By Signing up, I agree to Kottland's Terms of Service, Policy and Guarantee Terms"
                android:textAlignment="center"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>